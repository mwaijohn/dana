<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".AfterSignUpActivity">

    <ImageView
        android:id="@+id/imgSuccess"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/success"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:id="@+id/thankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSuccess"
        android:textColor="#fff"
        android:text="@string/thankyou_success"
        android:layout_marginTop="45dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:gravity="center"
        />

    <Button
        android:id="@+id/loanLimit"
        android:layout_below="@+id/thankYou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        android:text="Check Loan Limit"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="#303F9F"
        android:textAllCaps="false"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="25dp"/>

    <Button
        android:id="@+id/proceedLoan"
        android:layout_below="@+id/loanLimit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_white"
        android:text="Proceed to Loan Application"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="#303F9F"
        android:textAllCaps="false"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="30dp"/>

</RelativeLayout>